                                                    var str = "0123456789abcdefghikjlmnopqrstuvwxyz-@._";

                                                    for (var index = 0; index < len; index++)
                                                        if (str.indexOf(email.charAt(index)) == -1)
                                                            return false;

                                                    var indexDot = 	email.indexOf(".");
                                                    var indexAcsign = email.indexOf("@");

